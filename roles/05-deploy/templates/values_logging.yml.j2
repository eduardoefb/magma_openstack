imagePullSecrets: 
  - name: {{ prefix }}-secrets-registry

secret:
  certs: {{ prefix }}-secrets-certs

fluentd_daemon:
  create: false

  image:
    repository: {{ registry.url }}/{{ registry.project }}/orc8r-fluentd
    tag: {{ registry.tag }}
    pullPolicy: IfNotPresent

  env:
    elastic_host: "elasticsearch-logging"
    elastic_port: "9200"
    elastic_scheme: "http"

  resources: {}
  # limits:
  #   cpu: 100m
  #   memory: 128Mi
  # requests:
  #   cpu: 100m
  #   memory: 128Mi

fluentd_forward:
  create: true

  # Domain-proxy output
  dp_output: true

  replicas: 1

  nodeSelector: {}
  tolerations: []
  affinity: {}

  image:
    repository: {{ registry.url }}/{{ registry.project }}/orc8r-fluentd
    tag: {{ registry.tag }}
    pullPolicy: IfNotPresent

  env:
    elastic_host: "elasticsearch-logging"
    elastic_port: "9200"
    elastic_scheme: "http"
    elastic_flush_interval: 5s

  resources: {}

  service:
    targetPort: 24224
    type: LoadBalancer

